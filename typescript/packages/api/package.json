{
  "name": "@songbird/api",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@amplitude/analytics-node": "^1.0.5",
    "@google-cloud/storage": "^6.9.3",
    "@sendgrid/mail": "^7.7.0",
    "@songbird/precedent-iso": "workspace:^",
    "auth0": "^3.2.0",
    "axios": "^1.3.3",
    "cors": "^2.8.5",
    "dd-trace": "^3.14.1",
    "dotenv": "^16.0.3",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^8.4.1",
    "jwks-rsa": "^3.0.1",
    "pino": "^8.10.0",
    "pino-http": "^8.3.3",
    "redis": "^4.6.4",
    "slonik": "^33.0.8",
    "typescript": "^4.9.5",
    "zod": "^3.20.6"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "dev": "concurrently --restart-tries -1  --names \"HTTP,WATCH\" -c \"bgBlue.bold,bgMagenta.bold\" --restart-tries 100 \"yarn run-server::develop\" \"yarn watch\"",
    "run-server::prod": "node dist/index.js",
    "run-job-runner": "node dist/job-runner/main.js",
    "run-server::develop": "node --inspect=9331 --watch dist/index.js | pino-pretty",
    "test:sql": "docker compose run --build db_test_migration",
    "test": "yarn vitest --threads=false src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint; yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/auth0": "^2.35.9",
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.21.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sql": "^2.3.2",
    "pino-pretty": "^9.3.0",
    "prettier": "^2.8.4",
    "vitest": "^0.28.5"
  }
}
