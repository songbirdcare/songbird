{
  "name": "@songbird/api",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@songbird/precedent-iso": "workspace:^",
    "auth0": "^3.1.1",
    "axios": "^1.2.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dd-trace": "^3.12.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^8.3.0",
    "jwks-rsa": "^3.0.1",
    "pino": "^8.8.0",
    "pino-http": "^8.3.1",
    "redis": "^4.5.1",
    "slonik": "^33.0.6",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "dev": "concurrently --restart-tries -1  --names \"HTTP,WATCH\" -c \"bgBlue.bold,bgMagenta.bold\" --restart-tries 100 \"yarn run-server::develop\" \"yarn watch\"",
    "run-server::prod": "node dist/index.js",
    "run-server::develop": "node --inspect=9331 --watch dist/index.js | pino-pretty",
    "test": "yarn vitest src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint; yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/auth0": "^2.35.9",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.4.10",
    "@types/express": "^4.17.16",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.32.0",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-sql": "^2.3.2",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.3",
    "vitest": "^0.28.1"
  }
}
