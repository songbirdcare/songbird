{
  "name": "@songbird/api",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@songbird/precedent-iso": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pino-pretty": "^9.1.1",
    "redis": "^4.5.1",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "dev": "concurrently -k --names \"HTTP,WATCH\" -c \"bgBlue.bold,bgMagenta.bold\" \"yarn run-server::develop\" \"yarn watch\"",
    "run-server::prod": "node dist/index.js",
    "run-server::develop": "node --watch dist/index.js",
    "test": "yarn vitest src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint && yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/eslint": "^8",
    "@types/express": "^4",
    "@types/node": "^18.11.13",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "prettier": "^2.8.1",
    "vitest": "^0.25.6"
  }
}
