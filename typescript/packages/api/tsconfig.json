{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18 + Strictest",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "sourceRoot": "src",
    "outDir": "dist",
    "paths": {
      "@songbird/precedent-iso": ["../../precedent-iso/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../precedent-iso" }]
}
